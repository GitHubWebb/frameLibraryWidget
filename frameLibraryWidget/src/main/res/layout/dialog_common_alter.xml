<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:background="@drawable/bg_round_white_filling"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_alter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:text="title"
            android:textColor="#ff303030"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_alter_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:text="content"
            android:textColor="#ff303030"
            android:textSize="@dimen/sp_13" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_select_no"
                android:layout_width="@dimen/dp_94"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/btn_check_no"
                android:gravity="center"
                android:text="否"
                android:textColor="#FF303030"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_select_yes"
                android:layout_width="@dimen/dp_94"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_check_yes"
                android:gravity="center"
                android:text="是"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>